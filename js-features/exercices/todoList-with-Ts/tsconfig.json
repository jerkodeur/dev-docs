{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist/js",
    "rootDir": "src", //? It informs TypeScript to compile every .ts file located in the src folder.
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*" //? It tells the compiler to include files that are in the src directory and sub-directory.
  ],
  "exclude": [
    "src/types/*.ts",
    "node_modules",
    ".vscode",
    "package.json"
  ]
}